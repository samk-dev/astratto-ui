{
  "name": "samk-dev",
  "license": "MIT",
  "repository": "samk-dev/astratto-ui",
  "author": {
    "name": "Sam K",
    "url": "https://samk.dev"
  },
  "bugs": "https://github.com/samk-dev/astratto-ui/issues",
  "keywords": [
    "nuxt",
    "nuxtjs",
    "nuxt-module",
    "uikit",
    "uikit3",
    "ui-library"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:ui": "turbo run dev --filter=@samk-dev/astratto-ui",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "turbo": "^1.10.14"
  },
  "lint-staged": {
    "packages/**/*.{.js,ts,vue,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "docs/**/*.{.js,ts,vue,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
