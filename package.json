{
  "name": "@samk-dev/astratto-ui",
  "version": "1.0.0-dev-3",
  "description": "Yes, yet another UI library. Built on top of UIkit 3, it's exclusive to Nuxt",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "repository": "samk-dev/astratto-ui",
  "author": {
    "name": "Sam K",
    "url": "https://samk.dev"
  },
  "bugs": "https://github.com/samk-dev/astratto-ui/issues",
  "keywords": [
    "nuxt",
    "nuxtjs",
    "nuxt3",
    "nuxt-module",
    "uikit3",
    "yoothemes",
    "ui-library"
  ],
  "scripts": {
    "prepack": "nuxt-module-build",
    "dev": "PORT=4666 nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build --stub && nuxi prepare playground",
    "uikit:prefix": "node ./src/scripts/prefix-uikit.mjs",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "prepare": "husky install",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@nuxt/devtools": "^0.6.3",
    "@nuxt/kit": "^3.6.0",
    "@nuxt/module-builder": "^0.4.0",
    "@nuxt/schema": "^3.6.0",
    "@nuxt/test-utils": "^3.6.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/node": "^20.3.1",
    "@types/uikit": "^3.14.0",
    "changelogen": "^0.5.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.6.0",
    "prettier": "^2.8.8",
    "uikit": "^3.16.22",
    "vitest": "^0.32.2"
  },
  "lint-staged": {
    "**/*.{.js,ts,vue,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
